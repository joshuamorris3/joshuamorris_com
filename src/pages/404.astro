---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found">
  <div class="min-h-screen flex items-center justify-center text-center bg-white">
    <div>
      <h1 class="text-[#555] text-3xl font-normal mb-4">Page Not Found</h1>
      <p class="text-[#888] mx-auto max-w-[280px]">
        Sorry, but the page you were trying to view does not exist.
      </p>
    </div>
  </div>
</BaseLayout>

<style>
  @media only screen and (max-width: 280px) {
    p {
      width: 95%;
    }
    h1 {
      font-size: 1.5em;
      margin: 0 0 0.3em;
    }
  }
</style>

